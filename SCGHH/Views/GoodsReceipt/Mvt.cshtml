<script>
    const mvtSelectEl = document.querySelector("#movementType");
    const mvtFormEl = document.querySelectorAll(".mvt-form");
    const formButton = document.querySelector("#formButton");
    const detailTable = document.querySelector("#detailTable");

    function changeForm() {
        for (let i = 0; i < mvtFormEl.length; i++) {
            if (mvtFormEl[i].getAttribute("id") == mvtSelectEl.value) {
                mvtFormEl[i].classList.remove("d-none");
                formButton.classList.remove("d-none");
                detailTable.classList.remove("d-none");
            } else if (mvtSelectEl.value == 'Select') {
                mvtFormEl[i].classList.add("d-none");
                formButton.classList.add("d-none");
            } else {
                mvtFormEl[i].classList.add("d-none");
            }
        }
    }
</script>