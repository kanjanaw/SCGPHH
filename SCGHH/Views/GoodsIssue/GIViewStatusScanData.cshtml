<div class="container px-4 mt-4">
    <form action="">
        <div class="row g-3 align-items-center text-start">
            <div class="col-4">
                <label for="dpNumber" class="font-size-75">DP No.</label>
            </div>
            <div class="col-8">
                <input type="text" id="dpNumber" class="form-control form-control-22" placeholder="0413347872" disabled>
            </div>

            <div class="col-4">
                <label for="uom" class="font-size-75">UOM</label>
            </div>
            <div class="col-8">
                <div class="row mx-0 g-0">
                    <div class="col-6 form-check my-1">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label font-size-75" for="exampleRadios1">
                            Roll
                        </label>
                    </div>
                    <div class="col-6 form-check my-1">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                        <label class="form-check-label font-size-75" for="exampleRadios2">
                            Ream
                        </label>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <label for="batchNumber" class="font-size-75">Batch No.</label>
            </div>
            <div class="col-8">
                <input type="text" id="batchNumber" class="form-control form-control-22">
            </div>

            <div class="col-4">
                <label for="scanTotal" class="font-size-75">Scan Total</label>
            </div>
            <div class="col-8 font-size-75 d-flex align-items-center">
                <p class="flex-grow-1 mb-0">1/9</p>
                <p class="flex-grow-1 mb-0">1.280/9.194 Ton</p>
            </div>


        </div>

        <div class="row mx-0 mt-5 justify-content-between text-center">
            <a href="#" data-bs-toggle="modal" data-bs-target="#messageModal" class="col-6 btn-blue btn-col-6 link-button">Send to SAP</a>
            <a href="/goodsissue/giviewstatusdetail" class="col-6 btn-black btn-col-6 link-button">Back</a>
        </div>

    </form>

    <!-- MSG Modal -->
    <div class="modal fade" id="messageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Send to SAP</h5>
                </div>
                <div class="modal-body">
                    <p>DOC No. 12345</p>
                    <p>SAP Message: lorem</p>
                    <div class="row px-2">
                        <button type="button" class="btn-blue w-100" data-bs-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4 mx-0">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Batch</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Material</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>118A07708A</td>
                    <td>1.280</td>
                    <td>Z02CA-150D1690117N</td>
                </tr>
            </tbody>
        </table>
    </div>
